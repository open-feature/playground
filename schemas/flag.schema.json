{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://openfeature.dev/flag.schema.json",
  "title": "OpenFeature Feature Flags",
  "type": "object",
  "patternProperties": {
    "^[A-Za-z]+$": {
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "returnType": {
          "type": "string",
          "enum": [
            "boolean",
            "string",
            "number",
            "object"
          ],
          "default": "boolean"
        },
        "variants": {
          "type": "object",
          "patternProperties": {
            "^[A-Za-z]+$": {
              "properties": {
                "$comment": "Type should change based on return type",
                "value": {
                  "type": ["string", "number", "boolean", "object"]
                }
              }
            },
            "additionalProperties": false
          },
          "minProperties": 2,
          "default": { "enabled": true, "disabled": false }
        },
        "defaultVariant": {
          "type": "string"
        },
        "state": {
          "type": "string",
          "enum": [
            "enabled",
            "disabled"
          ]
        },
        "rules": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "target": {
                "type": "object",
                "properties": {
                  "variant": {
                    "type": "string",
                    "description": "The variant to use if the condition evaluates to true"
                  }
                }
              },
              "conditions": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "context": {
                      "type": "string",
                      "description": "The context key that should be evaluated in this condition"
                    },
                    "op": {
                      "type": "string",
                      "enum": [
                        "equals",
                        "starts_with",
                        "ends_with"
                      ]
                    },
                    "value": {
                      "type": "string"
                    }
                  },
                  "required": ["context", "op", "value"],
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false,
            "required": ["target", "conditions"]
          },
          "required": ["target", "conditions"],
          "default": []
        }
      },
      "required": ["state", "returnType", "variants", "rules"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}