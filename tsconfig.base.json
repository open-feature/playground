{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "outDir": "lib",
    "strictNullChecks": true,
    "paths": {
      "@openfeature/extra": ["packages/openfeature-extra/src/index.ts"],
      "@openfeature/fibonacci": ["packages/fibonacci/src/index.ts"],
      "@openfeature/js-env-provider": ["packages/js-env-provider/src/index.ts"],
      "@openfeature/js-flagsmith-provider": ["packages/js-flagsmith-provider/src/index.ts"],
      "@openfeature/js-flagsmith-v1-provider": ["packages/js-flagsmith-v1-provider/src/index.ts"],
      "@openfeature/js-harness-provider": ["packages/js-harness-provider/src/index.ts"],
      "@openfeature/js-json-provider": ["packages/js-json-provider/src/index.ts"],
      "@openfeature/js-launchdarkly-provider": ["packages/js-launchdarkly-provider/src/index.ts"],
      "@openfeature/js-split-provider": ["packages/js-split-provider/src/index.ts"],
      "@openfeature/openfeature-propagator": ["packages/openfeature-propagator/src/index.ts"],
      "@openfeature/provider": ["packages/provider/src/index.ts"]
    },
    "types": ["node"]
  },
  "exclude": ["node_modules", "tmp"]
}
